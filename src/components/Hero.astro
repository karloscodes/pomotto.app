---
import { faqItems } from "../data/faq";
// Using the simplified FAQ structure
---

<style>
  /* Only keeping styles that can't be easily done with Tailwind */
  .highlight {
    background: linear-gradient(120deg, rgba(4, 240, 248, 0.9) 0%, rgba(4, 240, 248, 0.7) 100%);
    padding: 0.1em 0.3em;
    margin: 0 -0.05em;
    border-radius: 0.2em;
    -webkit-box-decoration-break: clone;
    box-decoration-break: clone;
    display: inline;
  }
  
  .video-dialog {
    @apply p-0 border-0 rounded-lg overflow-hidden;
  }
  
  .video-container {
    @apply relative border-4 border-white rounded-lg overflow-hidden shadow-xl;
  }
</style>

<script>
 let dialog;
 let video;
 
 document.addEventListener('DOMContentLoaded', () => {
   dialog = document.getElementById('videoDialog');
   video = document.getElementById('demoVideo');
   
   document.querySelectorAll('.watchDemo').forEach(element => {
     element.addEventListener('click', (e) => {
       e.preventDefault();
       dialog.showModal();
     });
   });
   
   // Close dialog and stop video when close button is clicked
   document.getElementById('closeVideo').addEventListener('click', () => {
     stopVideoAndCloseDialog();
   });
   
   // Also handle dialog close using the escape key or clicking outside
   dialog.addEventListener('close', () => {
     stopVideo();
   });
 });
 
 function stopVideoAndCloseDialog() {
   stopVideo();
   dialog.close();
 }
 
 function stopVideo() {
   if (video) {
     video.pause();
     video.currentTime = 0;
   }
 }

 function toggleFaq(button) {
   // Toggle the content visibility
   const content = button.nextElementSibling;
   content.classList.toggle('hidden');
   
   // Rotate the chevron
   const chevron = button.querySelector('svg');
   chevron.classList.toggle('rotate-180');
   
   // Toggle active state styling on the button
   button.classList.toggle('bg-gray-50');
 }
</script>

<!-- Hero Section -->
<section class="py-16 bg-white">
  <div class="max-w-6xl mx-auto px-4">
    <div class="text-center mb-12">
      <h1 class="text-4xl sm:text-6xl font-semibold uppercase tracking-widest">
        Pomotto
      </h1>
      <h2 class="mt-6 text-2xl sm:text-4xl leading-relaxed max-w-3xl mx-auto">
        <span class="highlight">Deep Work, Done Right</span>
      </h2>
      <h2 class="mt-3 text-xl sm:text-xl leading-relaxed max-w-2xl mx-auto">
        Pomodoro timer to maintain <span class="highlight">laser focus</span> and <span class="highlight">sustain energy</span> throughout the day
      </h2>
    </div>

    <!-- Two-column layout -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <!-- Left column with app image -->
      <div class="flex flex-col items-center">
        <div class="bg-white shadow-md p-2 rounded-lg border border-gray-200 mb-6 inline-block ">
          <img src="/images/pomotto.jpg" alt="Timer" class="w-64 lg:w-80 mx-auto rounded-md " />
        </div>
        <a href="#" class="watchDemo text-xl font-semibold transition-colors">
          Watch a demo →
        </a>
      </div>

      <!-- Right column with description and CTA -->
      <div class="flex flex-col space-y-6">
        <div>
          <h3 class="text-2xl font-semibold mb-4">Focus → Recharge → Refocus</h3>
          <p class="text-lg mb-4">
            Breaks help to stop chasing rabbit holes, recharge, and refocus.
          </p>
          
          <h3 class="text-2xl font-semibold mb-4">Cut Notification Noise</h3>
          <p class="text-lg mb-4">
            No more Slack messages, or emails notifications while you're in the zone. But allow that important meeting to pop up.
          </p>
        </div>

        <div class="pt-4">
          <a href="https://apps.apple.com/us/app/pomotto/id6504365928?mt=12" class="block w-fit mx-auto">
            <img src="/images/AppStoreDownload-LG.svg" alt="Download on the App Store" class="w-full max-w-64 mx-auto rounded-md hover:opacity-90 transition-opacity" />
          </a>
          <p class="text-center mt-2">150+ installations</p>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Video Dialog -->
<dialog id="videoDialog" class="video-dialog w-full max-w-4xl backdrop:bg-gray-800/60">
  <div class="video-container">
    <button id="closeVideo" class="absolute top-3 right-3 bg-white rounded-full w-9 h-9 flex items-center justify-center cursor-pointer z-10 shadow-md hover:scale-110 transition-transform duration-150">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>
    <video id="demoVideo" controls class="w-full">
      <source src="/videos/demo.mp4" type="video/mp4">
    </video>
  </div>
</dialog>
