---
import { faqItems } from "../data/faq";
---

<section id="faq" class="py-16 bg-white border-t border-gray-100">
  <div class="max-w-6xl mx-auto px-4">
    <h2 class="text-3xl font-bold text-center mb-12">Frequently Asked Questions</h2>
    <div class="max-w-4xl mx-auto space-y-4">
      {faqItems.map((faq) => (
        <details class="bg-white rounded-lg shadow-sm border border-gray-100 overflow-hidden w-full group">
          <summary class="flex justify-between items-center p-5 cursor-pointer focus:outline-none hover:bg-gray-50 transition-colors">
            <span class="text-lg font-medium">{faq.question}</span>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 flex-shrink-0 transition-transform group-open:rotate-180" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </summary>
          <div class="p-5 border-t border-gray-100">
            <p class="text-left mb-4">{faq.answer}</p>
            
            {faq.bullets && (
              <ul class="text-left list-disc pl-8 space-y-2 mb-4">
                {faq.bullets.map((bullet) => (
                  <li>{bullet}</li>
                ))}
              </ul>
            )}
            
            {faq.secondaryText && (
              <p class="text-left">{faq.secondaryText}</p>
            )}
            
            {faq.link && (
              <p class="text-left">
                See <a href={faq.link.url} class="text-blue-600 hover:text-blue-800 font-medium">{faq.link.text}</a>.
              </p>
            )}
          </div>
        </details>
      ))}
    </div>
  </div>
</section> 
